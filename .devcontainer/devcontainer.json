{
  "name": "AI One-Pager Teaser Maker",
  "image": "mcr.microsoft.com/devcontainers/python:3.11",
  
  "customizations": {
    "vscode": {
      "settings": {
        "python.defaultInterpreterPath": "/usr/local/bin/python",
        "python.linting.enabled": true,
        "python.linting.pylintEnabled": true,
        "python.formatting.provider": "black"
      },
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance"
      ]
    },
    "codespaces": {
      "openFiles": [
        "README.md",
        "app.py"
      ]
    }
  },

  "forwardPorts": [8501],
  "portsAttributes": {
    "8501": {
      "label": "AI Teaser Maker App",
      "onAutoForward": "notify",
      "visibility": "public"
    }
  },

  "postCreateCommand": "pip install -r requirements.txt && chmod +x *.sh",
  
  "postStartCommand": "bash /workspaces/codespaces-blank/auto-start.sh",

  "features": {
    "ghcr.io/devcontainers/features/git:1": {}
  },

  "remoteUser": "vscode"
}
